# Environment Variables Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME="API Gateway"
APP_VERSION="1.0.0"
DEBUG=False

# CORS Configuration
# Permissive by default - allows all origins
# To restrict: ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://localhost:3000
# For development: ALLOWED_ORIGINS=*
ALLOWED_ORIGINS=*

# Gateway Service Port (for local development)
GATEWAY_PORT=8000

# External API Timeout (seconds)
API_TIMEOUT=10

# Logging
LOG_LEVEL=INFO
